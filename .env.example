#############################
# Media Queue Cleaner .env  #
#############################

# Required service URLs and API keys (use API v3 paths)
SONARR_URL=http://sonarr:8989/api/v3
SONARR_API_KEY=
RADARR_URL=http://radarr:7878/api/v3
RADARR_API_KEY=
LIDARR_URL=
LIDARR_API_KEY=

# Tuning
API_TIMEOUT=3600
GLOBAL_STALL_LIMIT=3
# Optional per-service stall limits
# SONARR_STALL_LIMIT=3
# RADARR_STALL_LIMIT=3
# LIDARR_STALL_LIMIT=3

# Behavior toggles
DEBUG_LOGGING=false
STRUCTURED_LOGS=true
DRY_RUN=false
EXPLAIN_DECISIONS=false

# Optional: rule engine via YAML (mounted as ./config.yaml)
# CONFIG_PATH=/app/config.yaml

# Optional: low-seeder stall heuristic (disable with -1)
# TORRENT_SEEDER_STALL_THRESHOLD=-1
# TORRENT_SEEDER_STALL_PROGRESS_CEILING=25

